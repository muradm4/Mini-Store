@using Entity;
@model List<Product>
@{
    ViewData["Title"] = "Search";
}




@if (Model.Count == 0)
{
    <div class="row">
        <div class="col-md-12">
            <div class="alert alert-danger">
                Ürün yok
            </div>
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-md-4">
            @await Component.InvokeAsync("Categories");
        </div>
        <div class="col-md-8">
            <div class="row">
                @foreach (var product in Model)
                {
                    <div class="col-md-4">
                        @Html.Partial("_product", product)
                    </div>

                }
            </div>
            </div>
        </div>

}
