@using Entity;
@model List<Category>

<div>
    <a href="/products" class="list-group-item list-group-item-action">All Categories</a>
    @foreach (var item in Model)
    { 
            <a href="/products/@item.Url" class="list-group-item list-group-item-action @(ViewBag.SelectedCategory==item.Url?"active":"")">@item.Name</a>
        }
</div>