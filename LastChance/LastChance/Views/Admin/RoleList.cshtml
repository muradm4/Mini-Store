@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "RoleList";
}

<h1>Role List</h1>
<hr />
<a href="/Admin/Roles/Add" class="btn btn-primary">Add Role</a>
<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td style="width:220px"></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>

                <td>
                    <a href="/admin/EditRole/@item.Id" class="btn btn-primary btn-sm mr-2">Edit</a>
                    <form action="/admin/RoleDelete" method="post" style="display:inline;">
                        <input type="hidden" name="Id" value="@item.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>

                </td>
            </tr>
        }

    </tbody>
</table>


