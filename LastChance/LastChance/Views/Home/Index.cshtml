@using Entity;
@model List<Product>



@*@section Categories
{
    @await Component.InvokeAsync("Categories");
}*@
@Html.Partial("_header")

@if (Model.Count == 0)
{
    <div class="row">
        <div class="col-md-12">
            <div class="alert alert-danger">
                Ürün yok
            </div>
        </div>
    </div>
}
else
{

<div class="row">
    <div class="col-md-3">
        @await Component.InvokeAsync("Categories");
        @Html.Partial("_search")

    </div>
    <div class="col-md-9">
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-md-4">
                    @Html.Partial("_product", product)
                </div>

            }
        </div>
    </div>
</div>
}



